{
  "manifest_version": 3,
  "name": "划词翻译(大V版)",
  "short_name": "华帆",
  "description": "无",
  "version": "2025.0",
  "author": "viivwang",
  "minimum_chrome_version": "134",
  "offline_enabled": true,
  "action": {},
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "type": "module",
    "service_worker": "js/background.js"
  },
  "permissions": [
    "tabs",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*",
    "file:///*/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": false,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "js/wasm/wasm_mod.js",
        "js/wasm/wasm_mod_bg.wasm"
      ]
    }
  ]
}
